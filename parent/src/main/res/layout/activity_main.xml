<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/ll_activity_main"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:background="@color/colorWhite"
    android:layout_height="match_parent"
    android:fitsSystemWindows="true">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="45dp">
        <TextView
            android:id="@+id/tv_title_setting"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:textColor="@color/colorMainYellow"
            android:layout_alignParentRight="true"
            android:paddingLeft="14dp"
            android:paddingRight="14dp"
            android:gravity="center"
            android:text="@string/setting"/>
        <ImageView
            android:id="@+id/iv_title_qr_code"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:paddingLeft="14dp"
            android:paddingRight="14dp"
            android:layout_alignParentRight="true"
            android:src="@drawable/icon_qr_code"/>
    </RelativeLayout>
    <View
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:background="@color/colorLineGray"/>
    <FrameLayout
        android:id="@+id/fl_container"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1">
    </FrameLayout>
    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="50dp">
        <TextView
            android:id="@+id/tv_bottom_home"
            android:drawableTop="@drawable/home_icon"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:gravity="bottom|center_horizontal"
            android:layout_gravity="center"
            android:drawablePadding="5dp"
            android:textSize="10dp"
            android:layout_height="40dp"
            android:textColor="@color/home_color"
            android:text="@string/kindergarten"/>
        <TextView
            android:id="@+id/tv_bottom_im"
            android:drawableTop="@drawable/im_icon"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:gravity="bottom|center_horizontal"
            android:layout_gravity="center"
            android:drawablePadding="5dp"
            android:textSize="10dp"
            android:layout_height="40dp"
            android:textColor="@color/home_color"
            android:text="@string/im"/>
        <TextView
            android:id="@+id/tv_bottom_find"
            android:drawableTop="@drawable/find_icon"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:gravity="bottom|center_horizontal"
            android:layout_gravity="center"
            android:drawablePadding="5dp"
            android:textSize="10dp"
            android:layout_height="40dp"
            android:textColor="@color/home_color"
            android:text="@string/find"/>
        <TextView
            android:id="@+id/tv_bottom_life"
            android:drawableTop="@drawable/life_circle_icon"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:gravity="bottom|center_horizontal"
            android:layout_gravity="center"
            android:drawablePadding="5dp"
            android:textSize="10dp"
            android:layout_height="40dp"
            android:textColor="@color/home_color"
            android:text="@string/life_circle"/>
        <TextView
            android:id="@+id/tv_bottom_me"
            android:drawableTop="@drawable/me_icon"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:gravity="bottom|center_horizontal"
            android:layout_gravity="center"
            android:drawablePadding="5dp"
            android:textSize="10dp"
            android:layout_height="40dp"
            android:textColor="@color/home_color"
            android:text="@string/me"/>
    </LinearLayout>
</LinearLayout>
