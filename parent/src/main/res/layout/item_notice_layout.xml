<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:background="@color/colorWhite"
    android:layout_height="wrap_content">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="90dp">
        <ImageView
            android:id="@+id/iv_item_notice"
            android:layout_marginTop="10dp"
            android:layout_marginBottom="10dp"
            android:layout_marginLeft="14dp"
            android:scaleType="centerCrop"
            android:layout_width="112dp"
            android:layout_height="70dp" />
        <TextView
            android:id="@+id/tv_item_title"
            android:layout_alignTop="@+id/iv_item_notice"
            android:layout_toRightOf="@+id/iv_item_notice"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="40dp"
            android:maxLines="2"
            android:ellipsize="end"
            android:textSize="15sp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/colorFontBlack"/>
        <TextView
            android:id="@+id/tv_item_time"
            android:layout_alignBottom="@+id/iv_item_notice"
            android:layout_toRightOf="@+id/iv_item_notice"
            android:layout_marginLeft="10dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/colorIconGray" />
        <ImageView
            android:id="@+id/iv_item_status"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_marginRight="5dp"
            android:src="@drawable/icon_no_read"/>
    </RelativeLayout>
</LinearLayout>