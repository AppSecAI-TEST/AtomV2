<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorGrayBg"
    android:orientation="vertical"
    android:fitsSystemWindows="true"
    tools:context="com.tongxun.atongmu.parent.ui.babysign.AskForLeaveActivity">
    <include layout="@layout/title_back_text_white"/>
    <LinearLayout
        android:id="@+id/ll_start_time"
        android:background="@color/colorWhite"
        android:layout_width="match_parent"
        android:layout_height="44dp">
        <TextView
            android:layout_width="0dp"
            android:layout_weight="1"
            android:gravity="center_vertical"
            android:layout_marginLeft="14dp"
            android:textColor="@color/colorFontBlack"
            android:text="@string/leave_start_time"
            android:layout_height="match_parent" />
        <TextView
            android:id="@+id/tv_start_time"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_marginRight="14dp"
            android:textColor="@color/colorFontBlack"
            android:gravity="center"
            android:text=""/>
        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginRight="14dp"
            android:src="@drawable/icon_next_gray"/>
    </LinearLayout>
    <LinearLayout
        android:id="@+id/ll_end_time"
        android:background="@color/colorWhite"
        android:layout_width="match_parent"
        android:layout_height="44dp">
        <TextView
            android:layout_width="0dp"
            android:layout_weight="1"
            android:gravity="center_vertical"
            android:layout_marginLeft="14dp"
            android:textColor="@color/colorFontBlack"
            android:text="@string/leave_end_time"
            android:layout_height="match_parent" />
        <TextView
            android:id="@+id/tv_end_time"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_marginRight="14dp"
            android:textColor="@color/colorFontBlack"
            android:gravity="center"
            android:text=""/>
        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginRight="14dp"
            android:src="@drawable/icon_next_gray"/>
    </LinearLayout>
    <LinearLayout
        android:background="@color/colorWhite"
        android:layout_width="match_parent"
        android:layout_height="44dp">
        <TextView
            android:layout_width="0dp"
            android:layout_weight="1"
            android:gravity="center_vertical"
            android:layout_marginLeft="14dp"
            android:textColor="@color/colorFontBlack"
            android:text="@string/leave_end_time"
            android:layout_height="match_parent" />
        <LinearLayout
            android:id="@+id/ll_title_homework"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_centerInParent="true"
            android:layout_marginRight="14dp"
            android:gravity="center">

            <TextView
                android:id="@+id/tv_personal_leave"
                android:layout_width="53dp"
                android:layout_height="wrap_content"
                android:background="@drawable/title_check_left"
                android:gravity="center"
                android:textColor="@color/homework_title_color"
                android:text="@string/personalleave" />
            <TextView
                android:id="@+id/tv_sick_leave"
                android:layout_width="53dp"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:text="@string/sickleave"
                android:textColor="@color/homework_title_color"
                android:background="@drawable/title_check_right"/>
        </LinearLayout>
    </LinearLayout>
    <EditText
        android:id="@+id/et_remark"
        android:layout_marginTop="10dp"
        android:layout_width="match_parent"
        android:layout_height="88dp"
        android:hint="@string/leave_remark"
        android:textColorHint="@color/colorFontBlack"
        android:textSize="15sp"
        android:textColor="@color/colorFontBlack"
        android:gravity="start"
        android:padding="10dp"
        android:background="@color/colorWhite"/>
    <Button
        android:id="@+id/btn_submit"
        android:layout_gravity="center"
        android:layout_marginTop="150dp"
        android:layout_width="300dp"
        android:layout_height="45dp"
        android:textColor="@color/colorWhite"
        android:background="@drawable/login_btn_yellow"
        android:text="@string/submit_ask_for_leave"/>
</LinearLayout>