<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="horizontal" android:layout_width="match_parent"
    android:layout_height="match_parent">
    <TextView
        android:id="@+id/comment_item_personA"
        android:layout_width="wrap_content"
        android:layout_height="20dp"
        android:textColor="#F49A28"
        android:layout_marginRight="2dp"
        android:text=""/>
    <TextView
        android:id="@+id/comment_item_reply"
        android:layout_width="wrap_content"
        android:layout_height="20dp"
        android:layout_marginRight="2dp"
        android:text="回复"/>
    <TextView
        android:id="@+id/comment_item_personB"
        android:layout_width="wrap_content"
        android:layout_height="20dp"
        android:textColor="#F49A28"
        android:layout_marginRight="2dp"
        android:text=""/>
    <TextView
        android:id="@+id/comment_item_colon"
        android:layout_width="wrap_content"
        android:layout_height="20dp"
        android:layout_marginRight="2dp"
        android:text="："/>

    <com.hyphenate.easeui.widget.EmojiTextView
        android:id="@+id/comment_item_content"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:minHeight="20dp"
        android:text=""/>
</LinearLayout>