<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:fitsSystemWindows="true"
    tools:context="com.tongxun.atongmu.parent.ui.login.NewPwdActivity">
    <include layout="@layout/toolbar_text"/>
    <LinearLayout
        android:orientation="vertical"
        android:layout_width="300dp"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        >
        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="54dp">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:minWidth="100dp"
                android:textColor="@color/colorFontBlack"
                android:text="@string/old_password"/>
            <EditText
                android:id="@+id/et_old_pwd"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="match_parent"
                android:textColorHint="@color/colorFontHint"
                android:textColor="@color/colorFontBlack"
                android:background="@null"
                android:hint="@string/new_password_tip"
                android:inputType="textPassword"
                android:maxLength="12"
                android:textSize="15sp"/>
        </LinearLayout>
        <View
            android:layout_width="300dp"
            android:layout_height="1dp"
            android:background="@color/colorLineGray"/>
        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="54dp">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:minWidth="100dp"
                android:textColor="@color/colorFontBlack"
                android:text="@string/new_password"/>
            <EditText
                android:id="@+id/et_new_pwd"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="match_parent"
                android:textColorHint="@color/colorFontHint"
                android:textColor="@color/colorFontBlack"
                android:background="@null"
                android:hint="@string/new_password_tip"
                android:inputType="textPassword"
                android:maxLength="12"
                android:textSize="15sp"/>
        </LinearLayout>
        <View
            android:layout_width="300dp"
            android:layout_height="1dp"
            android:background="@color/colorLineGray"/>
        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="54dp">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:minWidth="100dp"
                android:textColor="@color/colorFontBlack"
                android:text="@string/new_password_confirm"/>
            <EditText
                android:id="@+id/et_new_pwd_confirm"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="match_parent"
                android:textColorHint="@color/colorFontHint"
                android:textColor="@color/colorFontBlack"
                android:background="@null"
                android:hint="@string/new_password_tip"
                android:inputType="textPassword"
                android:maxLength="12"
                android:textSize="15sp"/>
        </LinearLayout>
        <View
            android:layout_width="300dp"
            android:layout_height="1dp"
            android:background="@color/colorLineGray"/>
        <Button
            android:id="@+id/btn_new_pwd"
            android:layout_marginTop="35dp"
            android:textColor="@color/colorWhite"
            android:background="@drawable/login_btn_yellow"
            android:text="@string/confirm"
            android:layout_width="300dp"
            android:layout_height="44dp"/>
        <Space
            android:layout_width="match_parent"
            android:layout_height="10dp" />
    </LinearLayout>
</RelativeLayout>