<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:background="@color/colorGrayBg"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fitsSystemWindows="true"
    >
    <include layout="@layout/title_back_text_white"/>
    <LinearLayout
        android:layout_width="match_parent"
        android:orientation="horizontal"
        android:background="@color/colorWhite"
        android:layout_height="wrap_content">
        <TextView
            android:id="@+id/recharge_pay_name"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="44dp"
            android:gravity="center_vertical"
            android:textSize="15sp"
            android:textColor="#434343"
            android:layout_marginLeft="12dp"
            android:text="付 款 人" />
        <TextView
            android:id="@+id/recharge_pay_name_value"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="15sp"
            android:textColor="#b0b0b0"
            android:layout_marginRight="12dp"
            android:gravity="center_vertical"
            android:text=""/>
    </LinearLayout>
    <View
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:background="@color/colorLineGray"
        ></View>
    <LinearLayout
        android:background="@color/colorWhite"
        android:layout_width="match_parent"
        android:orientation="horizontal"
        android:layout_height="wrap_content">
        <TextView
            android:id="@+id/recharge_record_title"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="44dp"
            android:gravity="center_vertical"
            android:textSize="15sp"
            android:textColor="#434343"
            android:layout_marginLeft="12dp"
            android:text="付款金额" />
        <TextView
            android:id="@+id/recharge_record_content"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="15sp"
            android:textColor="#b0b0b0"
            android:layout_marginRight="12dp"
            android:gravity="center_vertical"
            android:text=""/>
    </LinearLayout>
    <View
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:background="@color/colorLineGray"
        ></View>
    <LinearLayout
        android:background="@color/colorWhite"
        android:layout_width="match_parent"
        android:orientation="horizontal"
        android:layout_height="wrap_content">
        <TextView
            android:id="@+id/recharge_record_info"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="44dp"
            android:gravity="center_vertical"
            android:textSize="15sp"
            android:textColor="#434343"
            android:layout_marginLeft="12dp"
            android:text="购买套餐" />
        <TextView
            android:id="@+id/recharge_record_info_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="15sp"
            android:textColor="#b0b0b0"
            android:layout_marginRight="12dp"
            android:gravity="center_vertical"
            android:text=""/>
    </LinearLayout>
    <View
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:background="@color/colorLineGray"
        ></View>
    <LinearLayout
        android:background="@color/colorWhite"
        android:layout_width="match_parent"
        android:orientation="horizontal"
        android:layout_height="wrap_content">
        <TextView
            android:id="@+id/recharge_record_pay"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="44dp"
            android:gravity="center_vertical"
            android:textSize="15sp"
            android:textColor="#434343"
            android:layout_marginLeft="12dp"
            android:text="付款方式" />
        <TextView
            android:id="@+id/recharge_record_pay_mode"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="15sp"
            android:textColor="#b0b0b0"
            android:layout_marginRight="12dp"
            android:gravity="center_vertical"
            android:text=""/>
    </LinearLayout>
    <View
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:background="@color/colorLineGray"
        ></View>
    <LinearLayout
        android:background="@color/colorWhite"
        android:layout_width="match_parent"
        android:orientation="horizontal"
        android:layout_height="wrap_content">
        <TextView
            android:id="@+id/recharge_record_person"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="44dp"
            android:gravity="center_vertical"
            android:textSize="15sp"
            android:textColor="#434343"
            android:layout_marginLeft="12dp"
            android:text="付款对象" />
        <TextView
            android:id="@+id/recharge_record_person_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="15sp"
            android:textColor="#b0b0b0"
            android:layout_marginRight="12dp"
            android:gravity="center_vertical"
            android:text=""/>
    </LinearLayout>
    <View
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:background="@color/colorLineGray"
        ></View>
    <LinearLayout
        android:background="@color/colorWhite"
        android:layout_width="match_parent"
        android:orientation="horizontal"
        android:layout_height="wrap_content">
        <TextView
            android:id="@+id/recharge_record_order"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="44dp"
            android:gravity="center_vertical"
            android:textSize="15sp"
            android:textColor="#434343"
            android:layout_marginLeft="12dp"
            android:text="订单编号" />
        <TextView
            android:id="@+id/recharge_record_order_num"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="15sp"
            android:textColor="#b0b0b0"
            android:layout_marginRight="12dp"
            android:gravity="center_vertical"
            android:text=""/>
    </LinearLayout>
    <View
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:background="@color/colorLineGray"
        ></View>
    <RelativeLayout
        android:background="@color/colorWhite"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView
            android:gravity="center_vertical"
            android:id="@+id/recharge_record_create"
            android:layout_width="wrap_content"
            android:layout_height="44dp"
            android:textSize="15sp"
            android:textColor="#434343"
            android:layout_marginLeft="12dp"
            android:text="创建时间" />
        <TextView
            android:id="@+id/recharge_record_createtime"
            android:layout_width="wrap_content"
            android:layout_height="44dp"
            android:layout_alignParentRight="true"
            android:textSize="15sp"
            android:textColor="#b0b0b0"
            android:layout_marginRight="12dp"
            android:gravity="center_vertical"
            android:text=""/>
        <LinearLayout
            android:layout_below="@id/recharge_record_create"
            android:layout_width="match_parent"
            android:layout_marginLeft="12dp"
            android:layout_marginRight="12dp"
            android:background="@color/colorGrayBg"
            android:layout_marginBottom="8dp"
            android:gravity="center"
            android:layout_height="50dp" >
            <ImageView
                android:id="@+id/iv_pay_status"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/pay_wait"/>
            <TextView
                android:id="@+id/tv_pay_status"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/colorFontBlack"
                android:text="待付款"
                android:textSize="24sp"/>
        </LinearLayout>
    </RelativeLayout>
    <View
        android:id="@+id/pay_surplus_time_line"
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:background="@color/colorLineGray"
        ></View>

    <LinearLayout
        android:id="@+id/ll_pay_surplus_time"
        android:background="@color/colorWhite"
        android:gravity="center"
        android:layout_width="match_parent"
        android:layout_height="30dp">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="10dp"
            android:text="支付剩余时间"
            android:layout_marginRight="8dp"
            android:textColor="@color/colorFontBlack"/>
        <TextView
            android:id="@+id/tv_pay_surplus_time"
            android:textColor="@color/colorMainYellow"
            android:textSize="10sp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text=""/>
    </LinearLayout>
</LinearLayout>
