<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:background="@color/colorWhite"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <RelativeLayout
        android:id="@+id/rl_item_to_detail"
        android:layout_width="match_parent"
        android:layout_height="90dp">
        <ImageView
            android:id="@+id/iv_order_item"
            android:layout_width="70dp"
            android:layout_height="70dp"
            android:layout_centerVertical="true"
            android:layout_marginLeft="12dp"
            android:layout_marginRight="12dp"
            android:src="@drawable/happy_order_icon"
            />
        <TextView
            android:id="@+id/tv_order_item_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="18sp"
            android:textColor="@color/colorFontBlack"
            android:layout_marginTop="12dp"
            android:layout_alignTop="@id/iv_order_item"
            android:layout_toRightOf="@id/iv_order_item"
            android:text="3年欢乐套餐"/>
        <TextView
            android:id="@+id/tv_order_item_remarks"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:layout_toRightOf="@id/iv_order_item"
            android:layout_below="@+id/tv_order_item_title"
            android:textSize="12sp"
            android:textColor="@color/colorFontBlack"
            android:text="学期结束返100￥"/>
        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/icon_next_gray"
            android:layout_marginRight="12dp"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"/>
    </RelativeLayout>

    <View
        android:layout_width="match_parent"
        android:background="@color/colorLineGray"
        android:layout_height="0.5dp"/>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView
            android:id="@+id/tv_order_item_price"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/colorFontGray"
            android:textSize="15sp"
            android:layout_marginLeft="12dp"
            android:layout_marginTop="12dp"
            android:text="金额:"/>
        <TextView
            android:id="@+id/tv_order_item_price_value"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="8dp"
            android:textColor="@color/colorFontBlack"
            android:textSize="15sp"
            android:layout_toRightOf="@+id/tv_order_item_price"
            android:layout_alignTop="@+id/tv_order_item_price"
            android:text="￥50"/>
        <TextView
            android:layout_below="@+id/tv_order_item_price"
            android:id="@+id/tv_order_item_createtime"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/colorFontGray"
            android:layout_marginLeft="12dp"
            android:layout_marginTop="12dp"
            android:layout_marginBottom="12dp"
            android:textSize="15sp"
            android:text="创建时间:"/>
        <TextView
            android:id="@+id/tv_order_item_createtime_value"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="8dp"
            android:textColor="@color/colorFontBlack"
            android:textSize="15sp"
            android:layout_toRightOf="@+id/tv_order_item_createtime"
            android:layout_alignTop="@+id/tv_order_item_createtime"
            android:text="2016-10-10 11:47"/>
        <TextView
            android:layout_below="@+id/tv_order_item_createtime"
            android:id="@+id/tv_order_item_type"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/colorFontGray"
            android:layout_marginLeft="12dp"
            android:layout_marginBottom="12dp"
            android:textSize="15sp"
            android:text="订单状态:"/>
        <TextView
            android:id="@+id/tv_order_item_type_value"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="8dp"
            android:textColor="@color/colorFontBlack"
            android:textSize="15sp"
            android:layout_toRightOf="@+id/tv_order_item_type"
            android:layout_alignTop="@+id/tv_order_item_type"
            android:text="充值成功"/>
        <ImageView
            android:id="@+id/iv_order_delete"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="12dp"
            android:src="@drawable/icon_trash"/>
    </RelativeLayout>

    <View
        android:id="@+id/order_line"
        android:layout_width="match_parent"
        android:background="@color/colorLineGray"
        android:layout_height="0.5dp"/>
    <LinearLayout
        android:id="@+id/ll_click"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="44dp">
        <TextView
            android:id="@+id/tv_order_cancel"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="match_parent"
            android:gravity="center"
            android:textColor="@color/colorFontBlack"
            android:textSize="18sp"
            android:text="取消订单"/>
        <View
            android:layout_width="0.5dp"
            android:background="@color/colorLineGray"
            android:layout_height="match_parent"/>
        <TextView
            android:id="@+id/tv_order_confirm"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:gravity="center"
            android:layout_height="match_parent"
            android:textColor="@color/colorMainYellow"
            android:textSize="18sp"
            android:text="继续支付"/>
    </LinearLayout>
</LinearLayout>