<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:fitsSystemWindows="true"
    tools:context="com.tongxun.atongmu.parent.ui.my.recharge.RechargeActivity">
    <include layout="@layout/title_back_text_text_white"/>
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="90dp"
        android:background="@color/colorWhite">
        <de.hdodenhof.circleimageview.CircleImageView
            android:id="@+id/civ_recharge_face"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_marginLeft="12dp"
            android:layout_marginRight="12dp"
            android:src="@drawable/icon_default"
            android:layout_centerVertical="true"/>
        <TextView
            android:id="@+id/tv_recharge_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignTop="@+id/civ_recharge_face"
            android:layout_toRightOf="@id/civ_recharge_face"
            android:textSize="18sp"
            android:textColor="@color/colorFontBlack"
            android:text=""/>
        <TextView
            android:id="@+id/tv_recharge_class"
            android:layout_toRightOf="@+id/tv_recharge_name"
            android:layout_alignBottom="@+id/tv_recharge_name"
            android:layout_marginLeft="8dp"
            android:text=""
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
        <TextView
            android:id="@+id/tv_recharge_last_time"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text=""
            android:singleLine="true"
            android:layout_marginTop="6dp"
            android:textSize="12sp"
            android:layout_below="@+id/tv_recharge_name"
            android:layout_toRightOf="@+id/civ_recharge_face"
            android:textColor="@color/colorFontGray"/>
        <TextView
            android:id="@+id/tv_function_last_time"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="12sp"
            android:textColor="@color/colorFontGray"
            android:singleLine="true"
            android:layout_toRightOf="@+id/civ_recharge_face"
            android:layout_alignParentBottom="true"
            android:layout_marginBottom="6dp"/>
    </RelativeLayout>
    <LinearLayout
        android:layout_marginTop="12dp"
        android:background="@color/colorWhite"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView
            android:id="@+id/tv_happy_meal"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="50dp"
            android:padding="12dp"
            android:textSize="20sp"
            android:gravity="center"
            android:textColor="@color/notice_title_color"
            android:text="欢乐套餐"/>
        <TextView
            android:id="@+id/tv_function_meal"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="50dp"
            android:textSize="20sp"
            android:gravity="center"
            android:textColor="@color/notice_title_color"
            android:text="功能套餐"
            />
    </LinearLayout>
    <View
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:layout_marginLeft="12dp"
        android:layout_marginRight="12dp"
        android:background="@color/colorLineGray"/>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/colorWhite"
        android:paddingLeft="12dp"
        android:paddingTop="12dp"
        android:paddingRight="12dp">
        <TextView
            android:id="@+id/tv_recharge_tip"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/colorFontGray"
            android:textSize="15sp"
            android:text="畅享全部功能，家园沟通无障碍。"/>
        <TextView
            android:id="@+id/tv_recharge_more"
            android:layout_toRightOf="@+id/tv_recharge_tip"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="15sp"
            android:textColor="@color/colorMainYellow"
            android:text="了解更多"/>
        <GridView
            android:layout_below="@id/tv_recharge_tip"
            android:layout_marginTop="18dp"
            android:id="@+id/gv_recharge"
            android:horizontalSpacing="12dp"
            android:verticalSpacing="12dp"
            android:layout_marginBottom="18dp"
            android:numColumns="2"
            android:scrollbars="none"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
        </GridView>
    </RelativeLayout>
</LinearLayout>