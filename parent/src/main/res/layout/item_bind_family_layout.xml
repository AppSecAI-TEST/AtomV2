<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    
   
    android:layout_height="wrap_content">
    <RelativeLayout
        android:background="@drawable/white_bg_shape"
        android:layout_gravity="center"
        android:layout_width="167dp"
        android:layout_height="150dp">
            <de.hdodenhof.circleimageview.CircleImageView
                android:id="@+id/civ_face"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:layout_marginTop="10dp"
                android:src="@drawable/icon_default"
                android:layout_centerHorizontal="true"/>
            <TextView
                android:id="@+id/tv_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="15sp"
                android:layout_centerHorizontal="true"
                android:layout_below="@id/civ_face"
                android:textStyle="bold"
                android:layout_marginTop="7dp"
                android:textColor="@color/colorFontBlack"
                android:text="爸爸"/>
            <TextView
                android:id="@+id/tv_level"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="10sp"
                android:textColor="@color/colorIconGray"
                android:layout_centerHorizontal="true"
                android:layout_below="@id/tv_name"
                android:text="LV10"/>
            <LinearLayout
                android:gravity="center_horizontal"
                android:orientation="vertical"
                android:layout_marginTop="24dp"
                android:layout_below="@id/tv_level"
                android:layout_centerHorizontal="true"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">
                <TextView
                    android:id="@+id/tv_look_baby_num"
                     android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textSize="14sp"
                        android:text="看过宝宝50次"/>
                <TextView
                    android:id="@+id/tv_card_status"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="14sp"
                    android:layout_marginTop="2dp"
                    android:text="看过宝宝50次"/>
                <TextView
                    android:id="@+id/tv_invite_activation"
                    android:layout_width="82dp"
                    android:layout_height="24dp"
                    android:textSize="12sp"
                    android:textColor="@color/colorWhite"
                    android:gravity="center"
                    android:background="@drawable/reminder_action_btn_shape"
                    android:text="@string/reminder_activation"/>
            </LinearLayout>
    </RelativeLayout>
</LinearLayout>