<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorGrayBg"
    android:orientation="vertical"
    android:id="@+id/ll_add_reminder"
    android:focusable="true"
    android:focusableInTouchMode="true"
    android:fitsSystemWindows="true"
    tools:context="com.tongxun.atongmu.parent.ui.my.personreminder.AddReminderActivity">
    <include layout="@layout/title_back_text_text_white"/>
    <View
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:background="@color/colorLineGray"/>
    <LinearLayout
        android:background="@color/colorWhite"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:gravity="center_vertical"
        android:layout_height="65dp">
        <TextView
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:textColor="@color/colorFontBlack"
            android:textSize="15sp"
            android:layout_marginLeft="14dp"
            android:text="@string/start_time"/>
        <TextView
            android:id="@+id/tv_time"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/colorFontBlack"
            android:textSize="15sp"
            android:layout_marginRight="14dp"
            android:text=""/>
    </LinearLayout>
    <View
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:background="@color/colorLineGray"/>
    <LinearLayout
        android:background="@color/colorWhite"
        android:gravity="center_vertical"
        android:layout_width="match_parent"
        android:layout_height="65dp">
        <TextView
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:textColor="@color/colorFontBlack"
            android:textSize="15sp"
            android:layout_marginLeft="14dp"
            android:text="@string/day_of_medicine"/>
        <TextView
            android:id="@+id/tv_reduce"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:padding="14dp"
            android:gravity="center"

            android:textColor="@color/colorFontBlack"
            android:textSize="20sp"
            android:text="－"/>
        <TextView
            android:id="@+id/tv_num"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:textColor="@color/colorFontBlack"
            android:textSize="15sp"
            android:text="1"
            android:gravity="center"/>
        <TextView
            android:id="@+id/tv_add"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:padding="14dp"
            android:gravity="center"
            android:textColor="@color/colorFontBlack"
            android:textSize="20sp"
            android:text="＋"/>
    </LinearLayout>
    <View
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:background="@color/colorLineGray"/>
    <EditText
        android:id="@+id/et_remark"
        android:layout_marginTop="10dp"
        android:layout_width="match_parent"
        android:background="@color/colorWhite"
        android:padding="5dp"
        android:textSize="14sp"
        android:gravity="start"
        android:layout_height="120dp" />

    <android.support.v7.widget.RecyclerView
        android:id="@+id/rv_photo"
        android:layout_marginTop="10dp"
        android:layout_marginBottom="10dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="14dp"
        android:background="@color/colorWhite"

        >

    </android.support.v7.widget.RecyclerView>
</LinearLayout>