<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:fitsSystemWindows="true"
    tools:context="com.tongxun.atongmu.teacher.ui.notice.DynamicAuditActivity">
    <include layout="@layout/title_back_text_white"/>
    <View
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:background="@color/colorLineGray"/>
    <WebView
        android:id="@+id/wv_web_info"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"></WebView>
    <LinearLayout
        android:layout_width="match_parent"
        android:orientation="horizontal"
        android:background="#ffffff"
        android:layout_height="wrap_content">
        <TextView
            android:id="@+id/check_pass_imgview"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_margin="10dp"
            android:layout_height="45dp"
            android:gravity="center"
            android:textColor="@color/colorMainYellow"
            android:background="@drawable/dynamic_button_shape"
            android:text="@string/pass"
           />
        <TextView
            android:id="@+id/check_unpass_imgview"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_margin="10dp"
            android:layout_height="45dp"
            android:gravity="center"
            android:textColor="@color/colorMainYellow"
            android:background="@drawable/dynamic_button_shape"
            android:text="@string/unpass"/>
    </LinearLayout>
</LinearLayout>