<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.tongxun.atongmu.teacher.ui.notice.AddNoticeActivity">
    <include layout="@layout/tittle_text_layout"/>
    <com.tongxun.atongmu.teacher.widget.EmojiEditText
        android:id="@+id/id_notice_title_v2_edit"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/colorWhite"
        android:minHeight="58dp"
        android:textColorHint="#d8d8d8"
        android:textSize="20sp"
        android:gravity="top"
        android:paddingTop="12dp"
        android:paddingBottom="12dp"
        android:paddingLeft="18dp"
        android:paddingRight="18dp"
        android:hint="@string/please_input_title"
        />
    <View
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:layout_marginLeft="14dp"
        android:layout_marginRight="14dp"
        android:background="@color/colorLineGray" />
    <com.tongxun.atongmu.teacher.widget.EmojiEditText
        android:id="@+id/id_notice_content_v2_edit"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:padding="18dp"
        android:gravity="top"
        android:background="@color/colorWhite"
        android:textColorHint="#d8d8d8"
        android:textSize="15sp"
        android:hint="@string/please_input_content"/>
</LinearLayout>